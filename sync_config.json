{
  "auto_sync_enabled": true,
  "sync_mode": "immediate",
  "sync_on_data_change": true,
  "daemon_check_interval": 60,
  "files_to_sync": [
    "investment_data.db",
    "db_snapshot.json",
    "exchange_rates_cache.json"
  ],
  "git_remote": "origin",
  "git_branch": "main",
  "commit_message_template": "Auto-sync: Update investment data - {timestamp}",
  "verbose_logging": true,
  "notification_on_sync": true,
  "description": "Auto-sync configuration for Investment Tracker. Set 'auto_sync_enabled' to true to enable automatic syncing."
}